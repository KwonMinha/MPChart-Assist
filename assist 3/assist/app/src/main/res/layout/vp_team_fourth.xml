                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/basic_text"
                    tools:text="오혜성" />
            </LinearLayout>

        </LinearLayout>


        <!-- ////////////////////////// 도움 순위 ////////////////////////// -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
