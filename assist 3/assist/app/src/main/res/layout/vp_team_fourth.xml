                    tools:text="오혜성" />

                <TextView
                    android:id="@+id/tv_assist_num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/basic_text"
                    tools:text="오혜성" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
