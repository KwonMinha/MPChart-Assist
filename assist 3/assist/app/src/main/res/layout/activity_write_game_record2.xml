<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.appjam.assist.assist.data.WriteGameRecordActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/top_chevron_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/previousBtn"
            android:layout_centerInParent="true"
            android:text="경기기록입력"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/completeBtn"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            android:background="#00ff0000"
            android:onClick="onClickView"
            android:text="완료"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/large_text" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            ////

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- item_game_record -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="25dp"
                        android:text="2017년 6월 8일"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/basic_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/logo1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/team_logo_s" />

                            <TextView
                                android:id="@+id/name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="team1"
                                android:textColor="@color/colorWhite"
                                android:textSize="8sp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/score1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="29dp"
                            android:layout_marginRight="9dp"
                            android:text="-"
                            android:textColor="@color/colorWhite"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/vs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=":"
                            android:textColor="@color/colorWhite"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/score2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="29dp"
                            android:text="-"
                            android:textColor="@color/colorWhite"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/logo2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/team_logo_s" />

                            <TextView
                                android:id="@+id/name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="team2"
                                android:textColor="@color/colorWhite"
                                android:textSize="8sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <FrameLayout
                    android:id="@+id/test_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    tools:background="@drawable/ground_343"></FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/backImg"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/reserve_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.5dp"
                        android:layout_marginTop="11dp"
                        android:paddingLeft="3.5dp"
                        android:text="후보"
                        android:textColor="#ffffff"
                        android:textSize="11sp" />

                    <Button
                        android:id="@+id/pre_player"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignBottom="@+id/backImg"
                        android:layout_marginBottom="19dp"
                        android:layout_marginLeft="19dp"
                        android:background="@drawable/reserve_chevron_left"
                        android:gravity="center" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView_h"
                        android:layout_width="266dp"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@+id/backImg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        tools:listitem="@layout/item_write_game_r2_h"></android.support.v7.widget.RecyclerView>

                    <Button
                        android:id="@+id/next_player"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignBottom="@+id/backImg"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="19dp"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/reserve_chevron_right" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/goalBtn"
                        android:layout_width="52dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/goal_button" />

                    <Button
                        android:id="@+id/helpBtn"
                        android:layout_width="52dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/assist_button" />

                    <Button
                        android:id="@+id/loseBtn"
                        android:layout_width="52dp"
                        android:layout_height="63dp"
                        android:background="@drawable/goal_conceded_button" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#265a87" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="득점 - 도움"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:background="#265a87" />


                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="실점"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#265a87" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"></android.support.v7.widget.RecyclerView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"></android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#265a87" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"></android.support.v7.widget.RecyclerView>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
