<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/Linearlayaout"
    android:orientation="vertical"
    tools:context="com.appjam.assist.assist.login.SignupActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/top_background_shadow">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:background="@drawable/top_chevron_left" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="회원가입"
            android:background="@color/colorTrans"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/large_text" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="77dp"
                android:text="이름"
                android:textColor="@color/colorSkyBlue"
                android:textSize="@dimen/basic_text" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom|left"
                android:layout_marginLeft="17dp"
                android:background="@null"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorSkyBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="ex) 박지성"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/signup_example_text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="이메일"
                android:textColor="@color/colorSkyBlue"
                android:textSize="@dimen/basic_text" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"

                android:background="@null"
                android:gravity="bottom"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/basic_text" />

            <Button
                android:id="@+id/check_email"
                android:layout_alignParentRight="true"
                android:layout_width="61dp"
                android:layout_height="22dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/overlap_check"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorSkyBlue" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="ex) assist@assist.com"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/signup_example_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="비밀번호"
                android:textColor="@color/colorSkyBlue"
                android:textSize="@dimen/basic_text" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:background="@null"
                android:gravity="bottom"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/basic_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorSkyBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="영소문자와 숫자 그리고 특수문자를 포함한 8자리"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/signup_example_text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="비밀번호 확인"
                android:textColor="@color/colorSkyBlue"
                android:textSize="@dimen/basic_text" />

            <EditText
                android:id="@+id/et_pwd2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:background="@null"
                android:gravity="bottom"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/basic_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorSkyBlue" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="66dp">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="246dp"
                android:layout_height="25dp"
                android:background="@drawable/button_selector_next"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/basic_text" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>